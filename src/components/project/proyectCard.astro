---
// src/components/project/proyectCard.astro
const { titulo, descripcion, ver, categoria, index } = Astro.props;
---

<div 
  class="project-card bg-white/5 backdrop-blur-sm rounded-xl overflow-hidden border border-[#69c7c7]/30 hover:border-[#69c7c7] transition-all hover:scale-[1.02] w-[350px] max-w-full"
  data-index={index}
  data-categoria={categoria}
>
  <div class="p-6">
    <h3 class="text-xl font-bold text-white mb-3">{titulo}</h3>
    
    <p class="text-gray-300 text-sm mb-4 min-h-[60px]">
      {descripcion}
    </p>
    
    {
      ver && (
        <a 
          href={ver}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block w-full text-center bg-[#69c7c7] text-[#1d1250] font-bold py-2 px-4 rounded-lg hover:bg-[#46caca] transition-colors drop-shadow-[2px_2px_0_#7836cf] hover:drop-shadow-[1px_1px_0_#7836cf]"
        >
          Ver evidencia
        </a>
      )
    }
  </div>
</div>